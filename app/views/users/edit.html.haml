#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field-name
          .field-name-lavel
            = f.label :user_name
          .field-name-input
            = f.text_field :user_name, autofocus: true, autocomplete: "user_name"
        .field-email
          .field-email-label
            = f.label :email
          .field-email-input
            = f.email_field :email, autocomplete: "email"
        .actions
          = f.submit "Update", class: 'btn'